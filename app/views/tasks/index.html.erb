<div id="container-main">
  <h1>The tasks</h1>

  <ol>
  <% @tasks.each do |task| %>
    <li><%=link_to "#{task['title']}", "/tasks/#{task['id']}" %>
    <%=link_to "Delete",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %> </li>
  <% end %>
  </ol>

  <%=link_to "New task", "/tasks/new" %>
</div>
